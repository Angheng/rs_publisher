<launch>
  <arg name="name"	default="rs_1" />

  <node name="rs_publisher" pkg= "rs_publisher" type="rs_publisher">
	<param name="name" type="string" value="$(arg name)" />
  </node>

  <node name="cam_info_publisher" pkg="rs_publisher" type="cam_info_publisher">
    <param name="name" type="string" value="$(arg name)" />
  </node>

  <node pkg="tf" type="static_transform_publisher" name="tf_broadcaster" args="0 -0 -0 -0.5 0.5 -0.5 0.5 world $(arg name)_frame 100" />
</launch>
